<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="columnViewBorderPane"
            fx:controller="com.cloudmanager.gui.controller.RepoViewController">
    <top>
        <BorderPane>
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>

            <left>
                <Button fx:id="reloadButton" text="%reload"/>
            </left>

            <right>
                <ComboBox fx:id="repoSelector"/>
            </right>
        </BorderPane>
    </top>

    <center>
        <fx:include source="FileTreeView.fxml"/>
    </center>
</BorderPane>